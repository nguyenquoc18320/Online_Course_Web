<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Display_Course_Introduction_Teacher</servlet-name>
        <servlet-class>Controller.Display_Course_Introduction_Teacher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Display_Excercise_Teacher</servlet-name>
        <servlet-class>Controller.Display_Excercise_Teacher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Process_CourseIntroduction_Teacher</servlet-name>
        <servlet-class>Controller.Process_CourseIntroduction_Teacher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Process_Excercise_Teacher</servlet-name>
        <servlet-class>Controller.Process_Excercise_Teacher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Display_Excercise_Student</servlet-name>
        <servlet-class>Controller.Display_Excercise_Student</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Process_Excercise_Student</servlet-name>
        <servlet-class>Controller.Process_Excercise_Student</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Display_Course_Introduction_Teacher</servlet-name>
        <url-pattern>/Display_Course_Introduction_Teacher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Display_Excercise_Teacher</servlet-name>
        <url-pattern>/Display_Excercise_Teacher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Process_CourseIntroduction_Teacher</servlet-name>
        <url-pattern>/Process_CourseIntroduction_Teacher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Process_Excercise_Teacher</servlet-name>
        <url-pattern>/Process_Excercise_Teacher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Display_Excercise_Student</servlet-name>
        <url-pattern>/Display_Excercise_Student</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Process_Excercise_Student</servlet-name>
        <url-pattern>/Process_Excercise_Student</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
</web-app>
